<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:weightSum="2"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginRight="8dp"
        android:src="@drawable/sinhvien"
        android:layout_width="100dp"
        android:layout_height="130dp"/>


    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvmasinhvien_sinhvienadapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/tvmakhoahoc_sinhvienadapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/tvtensinhvien_sinhvienadapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:id="@+id/tvngaysinh_sinhvienadapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:id="@+id/tvquequan_sinhvienadapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgsuasinhvien_sinhvienAdapter"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_width="45dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/imgxoasinhvien_sinhvienAdapter"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_width="45dp"
            android:layout_height="60dp"/>
    </LinearLayout>
</LinearLayout>